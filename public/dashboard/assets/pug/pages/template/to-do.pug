- var page_Title = 'To-Do';
- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var scrollbar             = true;
- var custom_todo           = true;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/taptop
    include ../../components/loader
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container-fluid
            .page-title
              .row
                .col-sm-6
                  h3
                    | To-Do
                .col-sm-6
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href='index.html')                                        
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item Apps
                    li.breadcrumb-item.active To-Do
          // Container-fluid starts
          .container-fluid.email-wrap.bookmark-wrap.todo-wrap
            .row
              .col-xxl-3.col-xl-4.box-col-30
                .email-sidebar.md-sidebar
                  a.btn.btn-primary.email-aside-toggle.md-sidebar-toggle To Do filter
                  .email-left-aside.md-sidebar-aside
                    .card 
                      .card-body 
                        .email-app-sidebar.left-bookmark.custom-scrollbar
                          .common-flex.align-items-center
                            .media-size-email
                              img.img-40.rounded-circle(src="../assets/images/user/user.png", alt="")
                            .flex-grow-1 
                              h6 WILLIAM C. JENNINGS
                              p william@jourrapide.com
                          ul.nav.main-menu
                            li.nav-item
                              button.btn-primary.txt-light.d-block.btn-mail.w-100
                                i.me-2(data-feather="check-circle") 
                                | To Do List
                            li.nav-item 
                              a(href="#!")
                                span.iconbg.bg-light-primary
                                  i.txt-primary(data-feather="file-plus")
                                span.title.ms-2 All Task
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-success
                                  i.txt-success(data-feather="check-circle")
                                span.title.ms-2 Completed
                                span.badge.badge-success 3
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-danger
                                  i.txt-danger(data-feather="cast")
                                span.title.ms-2 Pending
                                span.badge.badge-danger 2
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-info
                                  i.txt-info(data-feather="activity")
                                span.title.ms-2 In Process
                                span.badge.badge-primary 2
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-danger
                                  i.txt-danger(data-feather="trash")
                                span.title.ms-2 Trash
              .col-xxl-9.col-xl-8.box-col-12
                .card.todo-tasks
                  .card-header
                    .input-group
                      input#new-task-input.form-control(type='text' placeholder="write your task...")
                      button#add-task-button.btn.btn-primary(type='button') Add Task
                  .card-body.custom-scrollbar
                    ul#task-list.checkbox-checked
          // Container-fluid ends                    
        include ../../components/footer
    include ../../components/footer-files
